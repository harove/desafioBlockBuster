
<div class="row">
   <div class="col-sm-6">
         <% @movies.each do |movie| %>
            <% if movie.favorite %>  
               <div class="card card-body bg-light">
                  <%= movie.name %>
                  <%= movie.year %>
                  <%= link_to "Show", movie %>
                  <%= link_to "Edit", edit_movie_path(movie) %>
                  <%= link_to "Delete", movie, method: :delete %>
               </div>
            <%end%> 
         <% end %>
   </div>

   <div class="col-sm-6">
         <% @movies.each do |movie| %>
            <% if !movie.favorite %>  
               <div class="card card-body bg-light">
                  <%= movie.name %>
                  <%= movie.year %>
                  <%= link_to "Show", movie %>
                  <%= link_to "Edit", edit_movie_path(movie) %>
                  <%= link_to "Delete", movie, method: :delete %>
               </div>
            <%end%> 
         <% end %>
   </div>

<%= link_to  "New Movie", movies_new_path %>


</div>

